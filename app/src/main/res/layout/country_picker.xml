<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/country_picker_dialog_padding">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/il_content_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/country_picker_dialog_margin">

        <EditText
            android:id="@+id/et_search"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search"
            android:lines="1"
            android:singleLine="true"
            android:maxLength="70"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="@dimen/country_picker_width"
        android:layout_height="@dimen/country_picker_dialog_height"
        android:clickable="true"
        android:focusable="true"/>

</LinearLayout>